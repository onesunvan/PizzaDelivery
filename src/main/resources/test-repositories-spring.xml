<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
">
    

    <bean id="newOrder" scope="prototype" class="com.tess.entities.Order"/>
    
    <bean id="orderRepository" class="com.tess.repositories.SimpleOrderRepository"/>
    
    <bean id="orderService" class="com.tess.services.SimpleOrderService">
        <constructor-arg ref="orderRepository"/>
        <lookup-method name="createNewOrder" bean="newOrder"/>
    </bean>
    
    <bean id="pizzaRepository" class="com.tess.repositories.SimplePizzaRepository">
        <property name="pizzas">
            <list>
                <bean class="com.tess.entities.Pizza">
                    <constructor-arg value="tasty-boom"/>
                    <constructor-arg value="12."/>
                    <constructor-arg type="com.tess.entities.PizzaType" value="MEAT"/>
                </bean>
                <bean class="com.tess.entities.Pizza">
                    <constructor-arg value="meat-party"/>
                    <constructor-arg value="20."/>
                    <constructor-arg type="com.tess.entities.PizzaType" value="MEAT"/>
                </bean>
                <bean class="com.tess.entities.Pizza">
                    <constructor-arg value="vegan-rock"/>
                    <constructor-arg value="15."/>
                    <constructor-arg type="com.tess.entities.PizzaType" value="VEGAN"/>
                </bean>
                <bean class="com.tess.entities.Pizza">
                    <constructor-arg value="mixed-night"/>
                    <constructor-arg value="14."/>
                    <constructor-arg type="com.tess.entities.PizzaType" value="MIX"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="pizzaService" class="com.tess.services.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
</beans>
